<!DOCTYPE html>
<html>
  <head>
    <meta name="viewpoint" content="width=device-width, initial-scale=1">
    <title>IntraSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <%= render 'layouts/header' %>
    <div class="container-fluid">
      <% if !flash.empty? %>
          <% flash.keys.each do |key| %>
              <% if key == "notice" %>
                  <div class="alert alert-success alert-dismissible fade in col-md-8 col-md-offset-2" role="alert">
              <% elsif key == "alert" %>
                  <div class="alert alert-danger alert-dismissible fade in col-md-8 col-md-offset-2" role="alert">
              <% end %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <strong><%= flash[key] %></strong>
              </div>
          <% end %>
      <% end %>
      <div class="row">
        <%= yield :sidebar %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
