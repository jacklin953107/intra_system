<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :account, "帳號" %><br />
    <%= f.text_field :account, autofocus: true, autocomplete: "account" %>
  </div>

  <div class="field">
    <%= f.label :email, "電子信箱" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "密碼" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認密碼" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :name, "姓名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :group, "組別" %><br />
    <%= f.text_field :group, autofocus: true, autocomplete: "group" %>
  </div>

  <div class="field">
    <%= f.label :rank, "階級" %><br />
    <%= f.text_field :rank, autofocus: true, autocomplete: "rank" %>
  </div>

  <div class="actions">
    <%= f.submit "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
